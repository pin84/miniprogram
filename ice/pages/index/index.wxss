.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  font-size: 32rpx;
}

.header {
  width: 100%;
  display: flex;
  height: 100rpx;
  justify-content: space-between;
  align-content: center;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
}

.epsoide {
  margin: auto 0;
  margin-left: 20rpx;
}

.like {
  margin: auto 0;
  margin-right: 26rpx;
}

.nav {
  position: absolute;
  bottom: 20rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}

.share-btn {
  margin-top: 28rpx;
  margin-left: 10rpx;
}

.share {
  width: 40rpx;
  height: 40rpx;
}
