/* pages/book/index.wxss */

.container {
  width: 100%;
}
.container .header {
  position: fixed;
  background-color: #fff;
  width: 100%;
  height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  z-index: 99;
}
.container .header .box{
  margin: auto ;
  height: 70rpx;
  line-height: 70rpx;
  width: 80%;
  background-color: #f5f5f5;
  border-radius:50rpx;
  margin-top: 10rpx;
}
.container .header .box image {
  margin-right: 10px;
  width: 14px;
  height: 14px;
  margin-bottom: -2px;
}

.container .mainBody {
  padding: 100rpx 0;
  display: flex;
  /* height: 100vh; */
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.container .mainBody h3 {
  letter-spacing: 25rpx;
  padding: 20rpx 0;
}

.container .mainBody .books {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.container .mainBody .books .item {
  margin: 0 10rpx;
}
