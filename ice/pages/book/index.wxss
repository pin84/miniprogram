/* pages/book/index.wxss */

.container {
  width: 100%;
}

.container .header {
  position: fixed;
  background-color: #fff;
  height: 100rpx;
  width: 100%;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-shadow: 0 0 3px 0 #e3e3e3;
  z-index: 99;
}

.container .mainBody {
  padding: 100rpx 0;
  display: flex;
  /* height: 100vh; */
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
}

.container .mainBody h3 {
  letter-spacing: 25rpx;
  padding: 20rpx 0;
}

.container .mainBody .books {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.container .mainBody .books .item {
  margin: 0 10rpx;
}
